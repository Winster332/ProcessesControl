<UserControl x:Class="ProcessesControl.UI.BottomPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessesControl.UI"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="500">
    <Grid Background="#0088CC">
		<Label x:Name="label_processes_count" Content="Процессов:" HorizontalAlignment="Left" Margin="0,-4,0,0" VerticalAlignment="Center" FontSize="13" Foreground="#E0E0E0"/>
		<Label x:Name="label_processes_new" Content="Неопознанных:" HorizontalAlignment="Left" Margin="150,-4,0,0" VerticalAlignment="Center" FontSize="13" Foreground="#E0E0E0"/>
		<Label x:Name="label_CPU" Content="CPU:" HorizontalAlignment="Left" Margin="320,-4,0,0" VerticalAlignment="Center" FontSize="13" Foreground="#E0E0E0"/>
		<Label x:Name="label_RAM" Content="RAM:" HorizontalAlignment="Left" Margin="410,-4,0,0" VerticalAlignment="Center" FontSize="13" Foreground="#E0E0E0"/>

	</Grid>
</UserControl>
