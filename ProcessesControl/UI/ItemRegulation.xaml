<UserControl x:Class="ProcessesControl.UI.ItemRegulation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessesControl.UI"
			 xmlns:ui="clr-namespace:ProcessesControl.UI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="357">
    <Grid>
		<Rectangle Fill="#ADADAD" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<ComboBox Height="20" Width="130"/>
			<Button Width="30" Margin="5, 2" Style="{StaticResource StyleButtonClose}"/>
		</StackPanel>
		<ui:MetroTextBox  HorizontalAlignment="Left" Margin="5, 0"/>
	</Grid>
</UserControl>
